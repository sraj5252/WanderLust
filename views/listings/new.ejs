<%layout("layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-md-8 offset-md-2">
        <h3>Create a New Listing</h3>
    <form method ="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for ="title" class ="form-label">Title</label>
            <input name ="listing[title]" 
            placeholder="Add a catchy Title"
            type="text"
            class="form-control"
            required>
            <div class="valid-feedback">
               Title is good
            </div>
            <div class="invalid-feedback">
                Enter valid Title
             </div>
        </div>

        <div class="mb-3">  
            <label for="description" class="form-label">Description</label>  
            <textarea name="listing[description]"   
                      class="form-control"   
                      required   
                      maxlength="200"   
                      placeholder="Enter a short description"></textarea>  
            <div class="invalid-feedback">  
                Please enter a description (max 200 characters)  
            </div>  
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name ="listing[image]" placeholder="Enter image URL/Link" class="form-control" type="file" required>           
        </div>
       
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name ="listing[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">
                Enter Valid Price
              </div>
            </div>

            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name ="listing[country]" placeholder="India" class="form-control" required>
            <div class="invalid-feedback">
                Enter valid Country
              </div>
            </div>
        </div>

        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name ="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
        <div class="invalid-feedback">
           Enter valid Location
          </div>
        </div>
        <br>
        <br>
        <button class="btn btn-dark add-btn mt-3 mb-3">Create Listing</button>
    </form>
</div> 
</div>
